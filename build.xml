<?xml version="1.0" encoding="UTF-8"?>
<project name="weatherreport" default="all">
  
  
  <property file="WeatherReport.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/converter-gson-2.0.0-beta4.jar"/>
    <pathelement location="${basedir}/lib/gson-2.4.jar"/>
    <pathelement location="${basedir}/lib/okhttp-3.0.1.jar"/>
    <pathelement location="${basedir}/lib/okio-1.6.0.jar"/>
    <pathelement location="${basedir}/lib/retrofit-2.0.0-beta4.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module WeatherReport -->
  
  <dirname property="module.weatherreport.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.weatherreport" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.weatherreport" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.weatherreport" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.weatherreport" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="weatherreport.output.dir" value="${module.weatherreport.basedir}/out/production/WeatherReport"/>
  <property name="weatherreport.testoutput.dir" value="${module.weatherreport.basedir}/out/test/WeatherReport"/>
  
  <path id="weatherreport.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="weatherreport.module.production.classpath">
    <path refid="${module.jdk.classpath.weatherreport}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="weatherreport.runtime.production.module.classpath">
    <pathelement location="${weatherreport.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="weatherreport.module.classpath">
    <path refid="${module.jdk.classpath.weatherreport}"/>
    <pathelement location="${weatherreport.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="weatherreport.runtime.module.classpath">
    <pathelement location="${weatherreport.testoutput.dir}"/>
    <pathelement location="${weatherreport.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.weatherreport">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.weatherreport">
    <patternset refid="excluded.from.module.weatherreport"/>
  </patternset>
  
  <path id="weatherreport.module.sourcepath">
    <dirset dir="${module.weatherreport.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.weatherreport" depends="compile.module.weatherreport.production,compile.module.weatherreport.tests" description="Compile module WeatherReport"/>
  
  <target name="compile.module.weatherreport.production" depends="register.custom.compilers" description="Compile module WeatherReport; production classes">
    <mkdir dir="${weatherreport.output.dir}"/>
    <javac2 destdir="${weatherreport.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.weatherreport}/javac">
      <compilerarg line="${compiler.args.weatherreport}"/>
      <bootclasspath refid="weatherreport.module.bootclasspath"/>
      <classpath refid="weatherreport.module.production.classpath"/>
      <src refid="weatherreport.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.weatherreport"/>
    </javac2>
    
    <copy todir="${weatherreport.output.dir}">
      <fileset dir="${module.weatherreport.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.weatherreport.tests" depends="register.custom.compilers,compile.module.weatherreport.production" description="compile module WeatherReport; test classes" unless="skip.tests"/>
  
  <target name="clean.module.weatherreport" description="cleanup module">
    <delete dir="${weatherreport.output.dir}"/>
    <delete dir="${weatherreport.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.weatherreport" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.weatherreport" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.weatherreport:jar" value="${basedir}/out/artifacts/WeatherReport_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.WeatherReport.jar" value="${artifacts.temp.dir}/WeatherReport.jar"/>
  </target>
  
  <target name="artifact.weatherreport:jar" depends="init.artifacts, compile.module.weatherreport" description="Build &#39;WeatherReport:jar&#39; artifact">
    <property name="artifact.temp.output.weatherreport:jar" value="${artifacts.temp.dir}/WeatherReport_jar"/>
    <mkdir dir="${artifact.temp.output.weatherreport:jar}"/>
    <jar destfile="${temp.jar.path.WeatherReport.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${weatherreport.output.dir}"/>
      <zipfileset src="${basedir}/lib/converter-gson-2.0.0-beta4.jar"/>
      <zipfileset src="${basedir}/lib/gson-2.4.jar"/>
      <zipfileset src="${basedir}/lib/okhttp-3.0.1.jar"/>
      <zipfileset src="${basedir}/lib/okio-1.6.0.jar"/>
      <zipfileset src="${basedir}/lib/retrofit-2.0.0-beta4.jar"/>
      <zipfileset file="${basedir}/lib/converter-gson-2.0.0-beta4.jar"/>
      <zipfileset file="${basedir}/lib/gson-2.4.jar"/>
      <zipfileset file="${basedir}/lib/okhttp-3.0.1.jar"/>
      <zipfileset file="${basedir}/lib/okio-1.6.0.jar"/>
      <zipfileset file="${basedir}/lib/retrofit-2.0.0-beta4.jar"/>
    </jar>
    <copy file="${temp.jar.path.WeatherReport.jar}" tofile="${artifact.temp.output.weatherreport:jar}/WeatherReport.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.weatherreport:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.weatherreport:jar}"/>
    <copy todir="${artifact.output.weatherreport:jar}">
      <fileset dir="${artifact.temp.output.weatherreport:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>